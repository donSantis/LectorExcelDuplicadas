                        <td class="w-5"> @oculta.ORIGEN_MARCA</td>
                        <td class="w-5"> @oculta.KEY</td>
                        <td class="w-5"> @oculta.QUERY</td>
                        <td class="bg-danger w-5"> @oculta.DUPLICADO</td>
                    </tr>

                }
            </tbody>
        </table>
        <hr />
    }
    @if (Model.Marcas != null && Model.Marcas.Any())
    {
        // Realiza la operación que deseas, ya que Model.Duplicadas no es nulo y tiene al menos un elemento
        <hr />
        <h2>MARCAS (Total: @Model.Marcas.Count())</h2>

        <table class="table table-striped" cellpadding="0" cellspacing="0" border="1">

            @foreach (Marca marca in Model.Marcas)
            {
                @if (marca.ID == 0)
                {
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">ID_MARCA</th>
                            <th scope="col">ID_USUARIO</th>
                            <th scope="col">FECHA MARCA</th>
                            <th scope="col">ORIGEN_MARCA</th>
                            <th scope="col">KEY</th>
                            <th scope="col">QUERY</th>
                            <th scope="col">DUPLICADO</th>
                        </tr>
                    </thead>
                }
                <tbody>
                    @if (marca.ID > 0)
                    {
                        <tr>
                            <td class="w-5"> @marca.ID</td>
                            <td class="w-5"> @marca.ID_MARCA</td>
                            <td class="w-5"> @marca.ID_USUARIO</td>
                            <td class="w-5"> @marca.FECHA_MARCA</td>
                            <td class="w-5"> @marca.ORIGEN_MARCA</td>
                            <td class="w-5"> @marca.KEY</td>
                            <td class="w-5"> @marca.QUERY</td>
                            <td class="w-5"> @marca.DUPLICADO</td>
                        </tr>
                    }
                </tbody>
            }
        </table>
