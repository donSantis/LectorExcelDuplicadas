    @if (Model.Duplicadas != null && Model.Duplicadas.Any())
    {
        <hr />
        <h2>DUPLICADAS (Total: @Model.Duplicadas.Count())</h2>

        // Lógica para cuando Model.Duplicadas es nulo o está vacío<hr />
        <table class="table table-striped" cellpadding="0" cellspacing="0" border="1">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">ID_MARCA</th>
                    <th scope="col">ID_USUARIO</th>
                    <th scope="col">FECHA_MARCA_FIN</th>
                    <th scope="col">ORIGEN_MARCA</th>
                    <th scope="col">KEY</th>
                    <th scope="col">QUERY</th>
                    <th scope="col">DUPLICADO</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Marca duplicada in Model.Duplicadas)
                {
                    <tr>
                        <td class="w-5"> @duplicada.ID</td>
                        <td class="w-5"> @duplicada.ID_MARCA</td>
                        <td class="w-5"> @duplicada.ID_USUARIO</td>
                        <td class="w-5"> @duplicada.FECHA_MARCA</td>
                        <td class="w-5"> @duplicada.ORIGEN_MARCA</td>
                        <td class="w-5"> @duplicada.KEY</td>
                        <td class="w-5"> @duplicada.QUERY</td>
                        <td class="bg-danger w-5"> @duplicada.DUPLICADO</td>
                    </tr>

                }
            </tbody>
        </table>
        <hr />
    }

    @if (Model.Ocultas != null && Model.Ocultas.Any())
    {
        <hr />
        <h2>OCULTAS (Total: @Model.Ocultas.Count())</h2>
        // Lógica para cuando Model.Duplicadas es nulo o está vacío<hr />
        <table class="table table-striped" cellpadding="0" cellspacing="0" border="1">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">ID_USUARIO</th>
                    <th scope="col">ID_MARCA</th>
                    <th scope="col">FECHA_MARCA</th>
                    <th scope="col">ORIGEN_MARCA</th>
                    <th scope="col">KEY</th>
                    <th scope="col">QUERY</th>
                    <th scope="col">DUPLICADO</th>
                </tr>
